{
  "name": "mcp-perfex-crm",
  "version": "1.0.0",
  "description": "MCP Server for direct MySQL access to Perfex CRM with optimized performance and security",
  "main": "dist/index.js",
  "bin": {
    "mcp-perfex-crm": "./bin/mcp-perfex-crm"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mounir1993/mcp-perfex-crm.git"
  },
  "homepage": "https://github.com/mounir1993/mcp-perfex-crm#readme",
  "bugs": {
    "url": "https://github.com/mounir1993/mcp-perfex-crm/issues"
  },
  "files": [
    "dist/**/*",
    "bin/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:unit": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --testPathIgnorePatterns=e2e",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run lint && npm run test",
    "prepack": "npm run build",
    "docker:build": "docker build -t mcp-perfex-crm .",
    "docker:run": "docker run -d --name mcp-perfex-crm -p 3000:3000 --env-file .env mcp-perfex-crm",
    "docker:stop": "docker stop mcp-perfex-crm && docker rm mcp-perfex-crm",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "date-fns": "^4.1.0",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.4.5",
    "mysql2": "^3.11.5",
    "winston": "^3.12.0",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "mcp",
    "mysql",
    "crm",
    "perfex",
    "n8n",
    "n8n-node",
    "n8n-tool",
    "automation",
    "workflow",
    "business-intelligence",
    "model-context-protocol",
    "typescript",
    "performance",
    "ai-tools",
    "langchain"
  ],
  "author": {
    "name": "Emanuel Almeida",
    "email": "your.email@example.com",
    "url": "https://github.com/YOUR_USERNAME"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
